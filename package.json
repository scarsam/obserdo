{
	"name": "obserdo",
	"description": "A todo list app",
	"workspaces": ["./server", "./client", "./shared"],
	"scripts": {
		"db": "bun run --filter 'server' db:studio",
		"dev": "bun run --filter={client,server} dev",
		"dev:client": "bun run --filter 'client' dev",
		"dev:server": "bun run --filter 'server' dev",
		"build:client": "bun run --filter 'client' build",
		"build:shared": "bun run --filter 'shared' build",
		"build:server": "bun run --filter 'server' build",
		"build": "bun run build:shared && bun run build:client && bun run build:server",
		"postinstall": "bun run build:shared",
		"lint": "biome check .",
		"lint:fix": "biome check . --write"
	},
	"dependencies": {
		"better-auth": "^1.2.8",
		"drizzle-orm": "^0.44.0",
		"zod": "^3.25.42"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.33.1",
		"@typescript-eslint/parser": "^8.33.1",
		"bun-types": "latest",
		"eslint": "^9.28.0",
		"eslint-import-resolver-typescript": "^4.4.3",
		"eslint-plugin-import": "^2.31.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
